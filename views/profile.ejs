						<span><i class="fas fa-sun"></i></span>
					</label>
					<a class="logout" href="/logout"><i class="fas fa-sign-out-alt"></i></a>
					<div class="profile">
						<a href="<%= (locals.u1 && isme) ? 'javascript:void(0)' : username %>">
							<img src="img/profile1.jpg" alt="">
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="center prof">
			<div class="centercont">
				<div class="posts">
					<div class="puser">
						<div class="pname">
							<div>
								<img src="//picsum.photos/500/500" alt="">
								<div>
									<span>
										<%= (locals.u2) ? u2 : 'null' %>
									</span>
								</div>
							</div>
							<div class="pbtn">
								<% if(locals.isme && isme){ %> <a href="/edit/<%= (locals.u1) ? u1 : 'null' %>">Edit
										profile</a>
									<% } else{ %>
										<a class="follow" data-username="<%= (locals.u2) ? u2 : 'null' %>">
											<%= (locals.isfollowed && isfollowed) ? 'Unfollow' : 'Follow' %>
										</a>
										<% } %>

							</div>
						</div>
						<%= (locals.data) ? data.fullname : 'null' %>
							<br>
							<%= (locals.bio) ? bio : 'null' %>
								<div class="pstatus">
									<a href="#">
										<div class="pcount">23</div>posts
									</a>
									<a href="#">
										<div class="pfollowers">

										</div>followers
									</a>
									<a href="#">
